@model Usuarios

<head>
    <meta charset="utf-8" />
    <title>Destino Certo - Cadastro</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<header>
    <h2>Cadastro de Usu√°rio</h2>
    <div class="FormCads">
        <p id="pMensagem">@ViewBag.Mensagem</p>

        <form asp-action="Cadastro" method="POST">
            <p>
                <label asp-for="nome">Nome:</label>
                <input asp-for="nome" />
            </p>
            <p>
                <label asp-for="login">Login:</label>
                <input asp-for="login" type="email" />
            </p>
            <p>

                <label asp-for="senha">Senha:</label>
                <input asp-for="senha" type="password">
            </p>

            <p>
                <label asp-for="dataNasc">Data de nascimento:</label>
                <input asp-for="dataNasc" type="date">
            </p>
            <input type="submit" value="Cadastrar" />
            </p>
        </form>

    </div>
</header>